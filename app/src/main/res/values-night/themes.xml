<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdasFeed" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/brand_accent_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_secondary_color_accent</item>
        <item name="colorSecondaryVariant">@color/brand_secondary_color_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/inter_thin</item>
    </style>

    <style name="ToolbarAppTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/kristi_regular</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="DefaultActionButton" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/default_button_padding_start</item>
        <item name="android:paddingEnd">@dimen/default_button_padding_end</item>
        <item name="android:paddingTop">@dimen/default_button_padding_top</item>
        <item name="android:paddingBottom">@dimen/default_button_padding_bottom</item>
        <item name="android:background">@drawable/button_outlined_default</item>
        <item name="android:minHeight">@dimen/default_button_min_height</item>
    </style>

    <style name="DefaultTextH1" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/font_inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_defaultH1</item>
    </style>
</resources>